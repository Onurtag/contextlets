{
	"manifest_version": 2,
	"name": "Contextlets",
	"version": "0.2.0",
	"description": "Allows you to add custom context menu items that execute JavaScript.",
	"homepage_url": "https://github.com/davidmhammond/contextlets",
	"permissions":
	[
		"bookmarks",
		"clipboardRead",
		"clipboardWrite",
		"contextMenus",
		"downloads",
		"storage",
		"tabs",
		"<all_urls>"
	],
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';",
	"applications":
	{
		"gecko":
		{
			"id": "{dcf34dbe-ccd1-11e7-8f66-ff8971474715}"
		}
	},
	"background":
	{
		"scripts":
		[
			"background.js"
		]
	},
	"content_scripts":
	[
		{
			"matches":
			[
				"<all_urls>"
			],
			"js":
			[
				"content.js"
			]
		}
	],
	"options_ui":
	{
		"page": "options/options.html",
		"browser_style": true
	}
}
