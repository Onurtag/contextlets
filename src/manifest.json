{
	"manifest_version": 2,
	"name": "Contextlets",
	"version": "0.4.1",
	"description": "Add context menu items that execute custom JavaScript.",
	"homepage_url": "https://github.com/davidmhammond/contextlets",
	"permissions":
	[
		"bookmarks",
		"clipboardRead",
		"clipboardWrite",
		"contextMenus",
		"downloads",
		"management",
		"menus",
		"storage",
		"tabs",
		"<all_urls>"
	],
	"icons": {
		"16": "images/contextlets-16.png",
		"32": "images/contextlets-32.png",
		"48": "images/contextlets-48.png",
		"64": "images/contextlets-64.png"
	},
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';",
	"applications":
	{
		"gecko":
		{
			"id": "{dcf34dbe-ccd1-11e7-8f66-ff8971474715}"
		}
	},
	"background":
	{
		"scripts":
		[
			"background.js"
		]
	},
	"content_scripts":
	[
		{
			"matches":
			[
				"<all_urls>"
			],
			"js":
			[
				"content.js"
			]
		}
	],
	"options_ui":
	{
		"page": "options/options.html",
		"browser_style": true,
		"open_in_tab": true
	}
}
